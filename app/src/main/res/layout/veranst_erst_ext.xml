<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.example.rapha.kita_app.Veranst_Erst_Ext">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="409dp"
        android:layout_height="62dp"
        android:gravity="center"
        android:text="@string/veranstaltungen"
        android:textColor="@color/colorWhite"
        android:textSize="39sp"
        android:background="@drawable/my_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:gravity="fill_vertical"
        android:text="@string/empfaenger"
        android:textColor="@color/colorBlack"
        android:textSize="12sp"
        android:background="@drawable/doku_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.288"
        app:layout_constraintHorizontal_bias="0.491" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="80dp"
        android:layout_height="42dp"
        android:gravity="fill_vertical"
        android:text="@string/titel"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.247"
        app:layout_constraintHorizontal_bias="0.456" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="80dp"
        android:layout_height="42dp"
        android:gravity="fill_vertical"
        android:text="@string/datum"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.32"
        app:layout_constraintHorizontal_bias="0.456" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="80dp"
        android:layout_height="42dp"
        android:gravity="fill_vertical"
        android:text="@string/uhrzeit"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.393"
        app:layout_constraintHorizontal_bias="0.456" />

    <Button
        android:id="@+id/button1"
        android:layout_width="90dp"
        android:layout_height="38dp"
        android:text="@string/home"
        android:textColor="@color/colorWhite"
        android:background="@color/colorBlack"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.141"
        app:layout_constraintHorizontal_bias="0.498" />

    <Button
        android:id="@+id/button2"
        android:layout_width="213dp"
        android:layout_height="46dp"
        android:text="@string/nachricht_versenden"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPrimary"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.953" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="350dp"
        android:layout_height="165dp"
        android:inputType="textMultiLine"
        android:hint="Veranstaltungstext ..."
        android:textSize="16dp"
        android:gravity="center"
        android:background="@drawable/doku_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.629"
        app:layout_constraintHorizontal_bias="0.491" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:inputType="textMultiLine"
        android:hint="Mitbringen ..."
        android:textSize="16dp"
        android:gravity="center"
        android:background="@drawable/doku_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.833"
        app:layout_constraintHorizontal_bias="0.491" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="150dp"
        android:layout_height="42dp"
        android:inputType="textPersonName"
        android:hint="..."
        android:gravity="fill_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.245"
        app:layout_constraintHorizontal_bias="0.881" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="150dp"
        android:layout_height="42dp"
        android:inputType="date"
        android:hint="..."
        android:gravity="fill_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.32"
        app:layout_constraintHorizontal_bias="0.881" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="150dp"
        android:layout_height="42dp"
        android:inputType="time"
        android:hint="..."
        android:gravity="fill_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.393"
        app:layout_constraintHorizontal_bias="0.881" />

</android.support.constraint.ConstraintLayout>